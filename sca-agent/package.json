{
  "name": "sca-agent",
  "version": "1.0.0",
  "description": "SCA Agent using LangChain for vulnerability analysis",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "forum:start": "cd ../test-forum && npm start",
    "forum:dev": "cd ../test-forum && npm run dev",
    "start:all": "concurrently \"npm run forum:start\" \"npm start\" --names \"forum,sca\" --prefix-colors \"blue,green\"",
    "dev:all": "concurrently \"npm run forum:dev\" \"npm run dev\" --names \"forum,sca\" --prefix-colors \"blue,green\""
  },
  "dependencies": {
    "@langchain/community": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "@langchain/ollama": "^0.1.0",
    "@langchain/openai": "^1.1.1",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "langchain": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.7",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}