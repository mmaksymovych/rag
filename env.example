# LM Studio Configuration
# LM Studio should be running on the host machine at http://localhost:1234
# For Docker containers, use http://host.docker.internal:1234/v1
LM_STUDIO_API_URL=http://host.docker.internal:1234/v1
LM_STUDIO_EMBEDDING_MODEL=text-embedding-nomic-embed-text-v1.5
LM_STUDIO_CHAT_MODEL=google/gemma-3n-e4b
LM_STUDIO_TIMEOUT_SECONDS=600

# Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=text_chunks

# NestJS API Configuration
NESTJS_PORT=3000
NESTJS_HOST=0.0.0.0

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MAX_TEXT_LENGTH=100000

# Security
API_KEY=your-secret-api-key-here
